<h1>Sign In</h1>

<%= link_to "Register!", new_user_url %>

<form action="<%= session_url %>" method="post">
    <%= render "shared/form_auth_token" %>

    <label>Email
      <input type="text" name="user[email]">
    </label>
    <br>

    <label>Password
      <input type="password" name="user[password]">
    </label>
    <br>

    <input type="submit" value="Sign In">
</form>
